﻿@using Asp_task3.Areas.Admin.Models.ShopCategory
@model ShopCategoryIndexVM

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Shop Categories</h1>
    <a class="btn btn-primary" asp-action="create" asp-controller="shopcategory">Create</a>
</div>

<table class="table table-light">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Created at</th>
            <th scope="col">Modified at</th>
            <th scope="col" class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var shopCategory in Model.ShopCategories)
        {
            <tr>
                <td>@shopCategory.Name</td>
                <td>@shopCategory.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@shopCategory.ModifiedAt?.ToString("dd/MM/yyyy HH:mm")</td>
                <td class="text-center d-flex justify-content-center">
                    <a class="btn btn-secondary mx-2" asp-action="update" asp-controller="shopcategory" asp-route-id="@shopCategory.Id">Update</a>
                    <form method="post" asp-action="delete" asp-controller="shopcategory" asp-route-id="@shopCategory.Id">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>