@using Asp_task3.Areas.Admin.Models.Slider
@model SliderIndexVM
<!-- Page Heading -->
<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Sliders</h1>
    <a class="btn btn-primary" asp-action="Create" asp-controller="Slider" asp-area="Admin">Create</a>
</div>

<table class="table table-light">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Title</th>
            <th scope="col">Photo</th>
            <th scope="col">Description</th>
            <th scope="col">Created at</th>
            <th scope="col">Modified at</th>
            <th scope="col" class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var slider in Model.Sliders)
        {
            <tr>
                <td>@slider.Name</td>
                <td>@slider.Title</td>
                <td><img src="@slider.PhotoPath" alt="@slider.Name" width="100" /></td>
                <td>@slider.Description</td>
                <td>@slider.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@slider.ModifiedAt?.ToString("dd/MM/yyyy HH:mm")</td>
                <td class="text-center d-flex justify-content-center">
                    <!-- Update Button -->
                    <a class="btn btn-secondary mx-2" asp-action="Update" asp-controller="Slider" asp-area="Admin" asp-route-id="@slider.Id">Update</a>

                    <!-- Delete Button -->
                    <form method="post" asp-action="Delete" asp-controller="Slider" asp-area="Admin" asp-route-id="@slider.Id">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this slider?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>